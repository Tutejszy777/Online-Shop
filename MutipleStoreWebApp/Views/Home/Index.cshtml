@model ShopPageVM

@{
    ViewData["Title"] = Model.StoreName;
}

<form asp-controller="Home" asp-action="Index" method="get">
    <p>
        <input type="hidden" name="Id" value="@Model.StoreId" />

        <select asp-for="SelectedCategory" asp-items="Model.Categories">
            <option value="">All</option>
        </select>

        <label>Title: <input type="text" name="SearchString" /></label>
        <input type="submit" value="Filter" />
    </p>
</form>


<hr />

<div class="container">
    <div class="row">
        <div class="col-md-4 col-sm-6 my-4">
            <div class="card" style="width: 18rem;">
                <img src="~/images/jagermeister-photo.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
        
        @foreach (var item in Model.ShopProducts!)
        {
            <div class="col-md-4 col-sm-6 my-4">
                <div class="card" style="width: 18rem;">
                    <img src="~/images/jagermeister-photo.jpg" class="card-img-top" alt="...">  
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <a href="#" class="btn btn-primary">Add to cart</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Preview</a>
                    </div>
                </div>
            </div>
        }

        
        
    </div>
</div>

@foreach (var item in Model.Products!)
{
    <p>@item.Name</p>
}

<h1>Categories</h1>
@foreach (var item in Model.Categories!)
{
    <p>@item.Value</p>
}


<hr />
<p>Selected category: @Model.SelectedCategory!</p>

<hr />
<p>Search string: @Model.SearchString!</p>

<hr />
<p>StoreId: @Model.StoreId</p>

<hr />
<p>Store name: @Model.StoreName</p>

<hr />
<p>Store slug: @Model.StoreSlug</p>

<h1>List of products</h1>
@foreach (var item in Model.ShopProducts!)
{
    <p>@item.Name</p>
}

<h1>List of Categories</h1>
@foreach (var item in Model.CategoryProducts!)
{
    <p>@item.Name</p>
}
